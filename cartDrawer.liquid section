<script>
  window.onload = function(){
    $(document).ready(function(){
      console.log("working...........");
     
      buildCart();
      try{
        $(document).on("click","a.cart-link",function(event){
            event.preventDefault();
            openCart();
        });
      }catch(e){console.log(e)}
      
      try{
        $(".cart_drawer_cstm .drawer__close").click(function(event){
            event.preventDefault();
            $(this).toggleClass("hide_me");
            $(".cart_drawer_cstm .drawer").removeClass("drawer--has-attached drawer--active");
            $(".cart_drawer_cstm .drawer__attached-drawer").removeClass("drawer__attached-drawer--active");
            $("body").toggleClass("overlay");
        });
      }catch(e){console.log(e)}

      try{
        $(document).on("click",".cart_drawer_cstm .cstm_minus,.cart_drawer_cstm .cstm_plus,.cart_drawer_cstm .cstm_remove",function(){
            var act = $(this).attr("action");
            var id = $(this).attr("v_id");
            var quantity = $(this).attr("quantity");
            if(quantity != undefined){
              quantity = parseInt(quantity);
            }
            updateCart(id,act,quantity)
        });
      }catch(e){console.log(e)}

      try{
        $(".section-main-product .quantity-submit-row__submit.input-row button").click(function(){
          setTimeout(function(){
            buildCart();
            openCart();
          },1000);
        });
      }catch(e){console.log(e)}

      try{
        $(".cart_drawer_cstm .cstm_go_chkout").click(function(event){
          event.preventDefault();
          if($(".terms_cstm_chk").prop("checked")){
            window.location.href="/checkout"
          }else{
            $(".cstm_no_term").addClass("drawer__submodal--active");
          }
        });
      }catch(e){console.log(e)}

      try{
        $(".cstm_term_reject").click(function(event){
          event.preventDefault();
          $(".cstm_no_term").removeClass("drawer__submodal--active");
        });
      }catch(e){console.log(e)}

      try{
        $(".cstm_term_accept").click(function(event){
          event.preventDefault();
          $(".terms_cstm_chk").prop("checked",true);
          $(".cstm_no_term").removeClass("drawer__submodal--active");
        });
      }catch(e){console.log(e)}

      try{
        $(document).on("click",".cstm_add_upsell_desk",function(event){
          event.preventDefault();
          jQuery.post('/cart/add.js', { items: [ { quantity: 1, id: $(this).prev("select").find("option:selected").attr("id") } ] });
          setTimeout(function(){
            buildCart();
          },1000);
        });
      }catch(e){console.log(e)}

      try{
        $(document).on("click",".cstm_form_edit",function(event){
            event.preventDefault();
            var hndl = $(this).attr("handle").split("?")[0];
            $.getJSON(hndl,function(data){
                var product = data.product;
                if(product.variants.length>1){
                  $(".cstm_edt_img").attr("src",product.image.src);
                  $(".cstm_edt_title").text(product.title);
                  var op = "";
                  $(".cstm_edt_opt").empty();
                  for(var u=0; u<product.variants.length; u++){
                    op = op + '<option id="'+product.variants[u].id+'">'+product.variants[u].title+'</option>';
                  }
                  $(".cstm_edt_opt").append(op);
                  var qt = $(document).find(".cstm_minus[pid="+product.id+"]").attr("quantity");
                  $(".cstm_dr_qnty").attr("data-quantity",qt);
                  $(".cstm_dr_qnty").text(qt);
                  $(".cstm_edt_opt").attr("prev_id",$(document).find(".cstm_minus[pid="+product.id+"]").attr("v_id"));
                  $(".form_update_cstm").addClass("drawer__submodal--active");
                }
            })
        });
      }catch(e){console.log(e)}

      try{
        $(document).on("click",".cstm_edit_save",function(event){
            event.preventDefault();
            var v_id = $(".cstm_edt_opt").find("option:selected").attr("id");
            var qnt = $(".cstm_dr_qnty").attr("data-quantity");
            var prev_id = $(".cstm_edt_opt").attr("prev_id");
            if(prev_id != v_id){
             jQuery.post('/cart/change.js', { quantity : 0, id: prev_id });
             jQuery.post('/cart/add.js', { quantity : qnt, id: v_id });
            }else{
              jQuery.post('/cart/change.js', { quantity : qnt, id: v_id });
            }
            $(".form_update_cstm").removeClass("drawer__submodal--active");
            setTimeout(function(){
              buildCart();
            },1000);
        });
      }catch(e){console.log(e)}

      try{
        $(document).on("click",".cstm_dr_pls",function(){
            event.preventDefault();
            var qn = parseInt($(".cstm_dr_qnty").attr("data-quantity")) + 1;
            $(".cstm_dr_qnty").attr("data-quantity",qn);
            $(".cstm_dr_qnty").text(qn);
        });
      }catch(e){console.log(e)}

      try{
        $(document).on("click",".cstm_dr_min",function(){
            event.preventDefault();
            var qn = parseInt($(".cstm_dr_qnty").attr("data-quantity")) - 1;
            if(qn>=1){
              $(".cstm_dr_qnty").attr("data-quantity",qn);
              $(".cstm_dr_qnty").text(qn);
            }
        });
      }catch(e){console.log(e)}

      $(document).on('click', function(e) {
          var container = $(".form_update_cstm");
          if (!$(e.target).closest(container).length) {
              container.removeClass("drawer__submodal--active");
          }
      });
      
    })
  }

  function openCart(){
    setTimeout(function(){
      try{
        var rec = $(".cart_drawer_cstm .drawer").attr("data-recommendations");
        var total = $(".cart_drawer_cstm .drawer").attr("cart_total");
        $("body").toggleClass("overlay");
        if(rec=="true" && total != 0){
            $(".cart_drawer_cstm .drawer").toggleClass("drawer--has-attached drawer--active");
            $(".cart_drawer_cstm .drawer__attached-drawer").toggleClass("drawer__attached-drawer--active");
            $(".cart_drawer_cstm .drawer__close").toggleClass("hide_me");
        }else{
            $(".cart_drawer_cstm .drawer").toggleClass("drawer--active");
            $(".cart_drawer_cstm .drawer__close").toggleClass("hide_me");
        }
      }catch(e){console.log(e)}
    },700);
  }

  function buildCart(){
    try{
      jQuery.getJSON('/cart.js', function(cart) {
        let items = cart.items;
        $('.cart_items_cstm').empty();
        $(".cart_drawer_cstm .drawer").attr("cart_total",cart.item_count);
        if(cart.item_count>0){
          $("#cart-drawer-title span").text('('+cart.item_count+')');
          $(document).find(".cstm_checkout, .cstm_items_parent").removeClass("hide_me");
          $(document).find(".cstm_empty").addClass("hide_me");
          $(".cart-link__count").text(cart.item_count);
          var tpri = theme.Shopify.formatMoney(cart.items_subtotal_price,theme.money_format);
          var thtmlObject = $(tpri);
          var tprice = thtmlObject[0].innerText.split(" ")[1]+" "+thtmlObject[0].innerText.split(" ")[0].replace(".","");
          $(".cart_drawer_cstm .cstm_total_drawer").empty().append(tprice);
        }else{
          $("#cart-drawer-title span").text('(0)');
          $(document).find(".cstm_checkout, .cstm_items_parent").addClass("hide_me");
          $(document).find(".cstm_empty").removeClass("hide_me");
          $(".cart_drawer_cstm .drawer").removeClass("drawer--has-attached");
          $(".cart_drawer_cstm .drawer__attached-drawer").removeClass("drawer__attached-drawer--active");
        }
        recommendationProduct(cart);
        for(var i=0; i < items.length; i++)
        {
          var pri = theme.Shopify.formatMoney(items[i].final_line_price,theme.money_format);
          var htmlObject = $(pri);
          var price = htmlObject[0].innerText.split(" ")[1]+" "+htmlObject[0].innerText.split(" ")[0].replace(".","");
          $('.cart_items_cstm').append('<div class=" pb-4 mb-4 border-b border-gray-200 overflow-x-hidden cstm_items"><div class="flex -mx-2 cstm_itm" data-id="'+items[i].product_id+'" v-id="'+items[i].variant_id+'"> <div class="shrink-0 w-1/4 px-2"> <a href="'+items[i].url+'" class="aspect-ratio aspect-ratio--3/4"> <img class="pro_image" src="'+items[i].image+'"> </a> </div> <div class="flex-1 px-2 whitespace-nowrap overflow-hidden"> <p class="truncate"><a href="'+items[i].url+'">'+items[i].title+'</a></p> <button class="flex items-center text-gray-500 cstm_form_edit" handle="'+items[i].url+'" opt="'+items[i].variant_title+'" v_lngth="'+items[i].variant_options.length+'"><font style="vertical-align: inherit;">'+items[i].variant_title+'</font><span class="ml-1 w-5 lg:hidden"><svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 18 18"><path fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="1.5" d="m10.4 5.06 3.54 3.54M7.58 15l-3.89.35.31-3.93 7.64-7.63a2.2 2.2 0 0 1 3.11 0l.42.42a2.2 2.2 0 0 1 0 3.11L7.58 15z"></path></svg> </span></button> <p><span class="money"> '+price+'</span> </p> <div class="lg:block"> <div class="form-quantity"> <button class="cstm_minus" action="minus" type="btn" pid="'+items[i].product_id+'" v_id="'+items[i].variant_id+'" quantity="'+items[i].quantity+'">-</button><span>'+items[i].quantity+'</span> <button class="cstm_plus" action="plus" type="btn" v_id="'+items[i].variant_id+'" quantity="'+items[i].quantity+'">+</button> </div> </div> </div> <div class="px-2"> <button class="block w-8 h-8 p-2 text-gray-500 rounded-full border border-gray-300 cstm_remove" data-change="0" v_id="'+items[i].variant_id+'" action="remove"> <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 18" aria-hidden="true"> <defs></defs> <path fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="1.5" d="M14.21 5.5v11H4.22v-11M2.23 5.5H16.2M7.22 13.75v-5.5M11.21 13.75v-5.5M6.34 5.5V4a2.45 2.45 0 01.73-1.77 2.45 2.45 0 011.76-.73h.77A2.5 2.5 0 0112.09 4v1.5"></path> </svg> </button> </div> </div> </div>');
        }
      });
    }catch(e){console.log(e)}
  }

  function updateCart(vid,action,vquantity){
    try{
      if(action == "plus"){
        jQuery.post('/cart/change.js', { quantity : vquantity+1, id: vid });
      }else if(action == "minus"){
        jQuery.post('/cart/change.js', { quantity : vquantity-1, id: vid });
      }else if(action == "remove"){
        jQuery.post('/cart/change.js', { quantity : 0, id: vid });
      }
      setTimeout(function(){
        buildCart();
      },800);
    }catch(e){console.log(e)}
  }

  function recommendationProduct(cart){
      try{
        var limit=6, count = cart.items.length, item = cart.items;
        var arr = [];
        if(count>0){
          if(count==2){
            limit=3;
          }else if(count==3){
            limit=2;
          }else if(count>=4){
            limit=1;
          }
          if(count<=6){
            for(var i=0; i<count; i++){
              fetch(window.Shopify.routes.root + 'recommendations/products.json?product_id='+item[i].product_id+'&limit='+limit+'&intent=related')
                .then(response => response.json())
                .then(({ products }) => {
                  if (products.length > 0) {
                    arr.push(...products);
                  }
                }
              );
            }
          }else{
            var chk = 0;
            for(var i=count; i>0; i--){
              chk++;
              if(chk <=6){
              fetch(window.Shopify.routes.root + 'recommendations/products.json?product_id='+item[i].product_id+'&limit='+limit+'&intent=related')
                .then(response => response.json())
                .then(({ products }) => {
                  if (products.length > 0) {
                    arr.push(...products);
                  }
                }
              );
              }
            }
          }
      
          setTimeout(function(){
            if(arr.length>0){
              $(".cstm_upsell").empty();
              $(".cart_mob_recom_items").empty();
              for(var k=0; k<arr.length; k++){
                var npri = theme.Shopify.formatMoney(arr[k].price,theme.money_format);
                var nhtmlObject = $(npri);
                var nprice = nhtmlObject[0].innerText.split(" ")[1]+" "+nhtmlObject[0].innerText.split(" ")[0].replace(".","");
                var options = "";
                for(var m=0; m<arr[k].variants.length; m++){
                  options = options+'<option id="'+arr[k].variants[m].id+'">'+arr[k].variants[m].title+'</option>';
                }
                $(".cstm_upsell").append('<div class="flex-none w-32 lg:w-full snap-start cstm_upsell_item"> <div class="mb-2"> <div class="product-item"> <a href="/products/'+arr[k].handle+'" class="block mb-4"> <div class="product-item__images aspect-ratio aspect-ratio--3/4"> <img src="'+arr[k].featured_image+'" > </div> </a> <p class="text-sm font-semibold truncate">'+arr[k].title+'</p> <p> <span class="money">'+nprice+'</span> </p> </div> </div> <div class="hidden lg:block"> <form method="post" action="/cart/add" accept-charset="UTF-8"> <input type="hidden" name="form_type" value="product"> <input type="hidden" name="utf8" value="✓"> <select name="id" class="form-select mb-2"> '+options+' </select> <button class="button button--primary w-full cstm_add_upsell_desk" type="btn">add to cart</button> </form> </div> </div>');
                $(".cart_mob_recom_items").append('<div class="flex-none w-32 lg:w-full snap-start"> <div class="mb-2"> <div class="product-item"> <a href="/products/'+arr[k].handle+'" class="block mb-4"> <div class="product-item__images aspect-ratio aspect-ratio--3/4"> <img src="'+arr[k].featured_image+'"> </div> </a> <p class="text-sm font-semibold truncate">'+arr[k].title+'</p> <p> <span class="money">'+nprice+'</span> </p> </div> </div> <div class="hidden lg:block"> <form method="post" action="/cart/add" accept-charset="UTF-8"> <input type="hidden" name="form_type" value="product"> <input type="hidden" name="utf8" value="✓"> <select name="id" class="form-select mb-2">'+options+' </select> <button class="button button--primary w-full cstm_add_upsell_mob">add to cart</button> </form> </div> </div>')
              }
            }else{
              $(".cart_drawer_cstm .drawer").removeClass("drawer--has-attached");
              $(".cart_drawer_cstm .drawer__attached-drawer").removeClass("drawer__attached-drawer--active");
            }
          },800)
      }
    }catch(e){console.log(e)}
  }
  
</script>
<style>
  div#cart-summary-overlay {
    display: none;
}
</style>

